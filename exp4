ALTER TABLE STUDENT_1 ADD(PASS_FAIL VARCHAR(55));

UPDATE STUDENT_1 SET PASS_FAIL ='PASS' WHERE ROLL_NO=1;
UPDATE STUDENT_1 SET PASS_FAIL ='PASS' WHERE ROLL_NO=2;
UPDATE STUDENT_1 SET PASS_FAIL ='PASS' WHERE ROLL_NO=3;
UPDATE STUDENT_1 SET PASS_FAIL ='PASS' WHERE ROLL_NO=4;
UPDATE STUDENT_1 SET PASS_FAIL ='PASS' WHERE ROLL_NO=5;
UPDATE STUDENT_1 SET PASS_FAIL ='PASS' WHERE ROLL_NO=6;

UPDATE STUDENT_1 SET MATHS= '20' WHERE ROLL_NO=7;
UPDATE STUDENT_1 SET PHYSICS= '11' WHERE ROLL_NO=8;
UPDATE STUDENT_1 SET CHEMISTRY= '10' WHERE ROLL_NO=9;
UPDATE STUDENT_1 SET MATHS= '18' WHERE ROLL_NO=10;

UPDATE STUDENT_1 SET PASS_FAIL ='FAIL' WHERE ROLL_NO=7;
UPDATE STUDENT_1 SET PASS_FAIL ='FAIL' WHERE ROLL_NO=8;
UPDATE STUDENT_1 SET PASS_FAIL ='FAIL' WHERE ROLL_NO=9;
UPDATE STUDENT_1 SET PASS_FAIL ='FAIL' WHERE ROLL_NO=10;

SELECT AVG(PHYSICS) FROM STUDENT_1;

SELECT MAX(MATHS) AS highest_marks_maths FROM STUDENT_1;

SELECT MIN(CHEMISTRY) AS lowest_mark_chemistry FROM STUDENT_1;

SELECT COUNT(ROLL_NO) AS PASS_PHYSICS FROM STUDENT_1 WHERE PHYSICS>=12;

SELECT * FROM STUDENT_1
WHERE PHYSICS>=12 AND CHEMISTRY>=12 AND MATHS>=25;

SELECT ROLL_NO,( PHYSICS+ CHEMISTRY + MATHS) AS TOTAL ,PASS_FAIL FROM STUDENT_1
ORDER BY TOTAL DESC;

SELECT (SUM(MATHS/500)*100) AS AVG_MATHS FROM STUDENT_1;

SELECT (SUM ( PHYSICS+ CHEMISTRY + MATHS)/10 ) AS OVERALL FROM STUDENT_1;

SELECT COUNT(ROLL_NO) AS ALLPASS FROM STUDENT_1 WHERE PASS_FAIL ='PASS';











